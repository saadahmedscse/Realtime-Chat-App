<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Eirmon" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorWhite</item>
        <item name="colorPrimaryVariant">@color/background</item>
        <item name="colorOnPrimary">@color/colorWhite</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorYellow</item>
        <item name="colorSecondaryVariant">@color/colorWhite</item>
        <item name="colorOnSecondary">@color/colorWhite</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:windowDisablePreview">true</item>

        <item name="hintTextColor">@color/colorWhite</item>
        <!-- Customize your theme here. -->
    </style>
</resources>